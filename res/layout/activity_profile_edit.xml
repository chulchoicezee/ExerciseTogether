<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:orientation="vertical"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	>
	
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <!-- 종목 -->
        	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal"
	            android:layout_marginTop="10dp" >
	            <TextView
				    android:id="@+id/tv_sports_title"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="운동종목"/>
			    <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textColor="#FF0000"
				    android:layout_marginLeft="5dp"
				    android:text="(필수사항)"/>
		    </LinearLayout>
		    <Spinner
		        android:id="@+id/spn_sports"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		
			<!-- 이름 -->
        	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal"
			    android:layout_marginTop="10dp" >
	            <TextView
			        android:id="@+id/tv_name_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="닉네임"/>
			    <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textColor="#FF0000"
				    android:layout_marginLeft="5dp"
				    android:text="(필수사항)"/>
		    </LinearLayout>
		    <EditText
		        android:id="@+id/et_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:textAppearance="?android:attr/textAppearanceMedium">
		        <requestFocus />
		    </EditText>
			    		    
			<!-- 성별 -->
        	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal"
			    android:layout_marginTop="10dp" >
	            <TextView
			        android:id="@+id/tv_gender_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="성별"/>
			    <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textColor="#FF0000"
				    android:layout_marginLeft="5dp"
				    android:text="(필수사항)"/>
		    </LinearLayout>
		    <Spinner
		        android:id="@+id/spn_gender"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		    		
		    <!-- 나이 -->
        	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal" 
				android:layout_marginTop="10dp" >
	            <TextView
			        android:id="@+id/tv_age_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="나이"/>
			    <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textColor="#FF0000"
				    android:layout_marginLeft="5dp"
				    android:text="(필수사항)"/>
		    </LinearLayout>
			<Spinner
		        android:id="@+id/spn_age"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		    		    
		    <!-- 위치 -->
        	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal" 
			    android:layout_marginTop="10dp" >
	            <TextView
			        android:id="@+id/tv_location_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="위치"/>
			    <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textColor="#FF0000"
				    android:layout_marginLeft="5dp"
				    android:text="(필수사항)"/>
		    </LinearLayout>
		    <Spinner
		        android:id="@+id/spn_location"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		    		    
		    <!-- 전화번호 -->
		    <TextView
		        android:id="@+id/tv_phone_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="전화번호"
		        android:layout_marginTop="10dp" />
		    <EditText
		        android:id="@+id/et_phone"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:textAppearance="?android:attr/textAppearanceMedium">
		    </EditText>
		
		    <!-- 이메일 -->
		    <TextView
		        android:id="@+id/tv_email_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="이메일"
			    android:layout_marginTop="10dp" />
		    
		    <EditText
		        android:id="@+id/et_email"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:textAppearance="?android:attr/textAppearanceMedium">
		    </EditText>
		    
		    <!-- 시작시간-->
			<TextView
		        android:id="@+id/tv_fromhour_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="시작시간"
		        android:layout_marginTop="10dp" />
		    <Spinner
		        android:id="@+id/spn_fromhour"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		        <!-- 종료시간 -->
			<TextView
		        android:id="@+id/tv_tohour_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="종료시간"
		        android:layout_marginTop="10dp" />
		    <Spinner
		        android:id="@+id/spn_tohour"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		
			<TextView
		        android:id="@+id/tv_allow_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="알림 받기"
		        android:layout_marginTop="10dp" />
		    <Switch
		        android:id="@+id/sw_allow"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="알림" />
		    
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>